<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="project">

    <typeAlias alias="projectDO" type="com.sepgcc.site.dao.entity.ProjectDO" />

    <resultMap id="projectResult" class="projectDO">
        <result column="ID" property="id" />
        <result column="Name" property="name" />
        <result column="Description" property="description" />
        <result column="BeginTime" property="beginTime" />
        <result column="EndTime" property="endTime" />
        <result column="Owner" property="owner" />
        <result column="Status" property="status" />
        <result column="AddTime" property="addTime" />
        <result column="UpdateTime" property="updateTime" />
    </resultMap>

    <select id="loadById" resultMap="projectResult">
        SELECT ID,
            Name,
            Description,
            BeginTime,
            EndTime,
            Owner,
            Status,
            AddTime,
            UpdateTime
        FROM ZL_Project
        WHERE ID = #id#
        AND Status IN
        <iterate property="status" open="(" close=")" conjunction="," >
            #status[]#
        </iterate>
    </select>

    <select id="queryWithLimit" resultMap="projectResult">
        SELECT ID,
            Name,
            Description,
            BeginTime,
            EndTime,
            Owner,
            Status,
            AddTime,
            UpdateTime
        FROM ZL_Project
        WHERE Status IN
        <iterate property="status" open="(" close=")" conjunction="," >
            #status[]#
        </iterate>
        ORDER BY ID DESC
        LIMIT #index#, #limit#
    </select>

    <select id="countAll" resultClass="int">
        SELECT IFNULL(COUNT(ID), 0)
        FROM ZL_Project
        WHERE Status IN
        <iterate property="status" open="(" close=")" conjunction="," >
            #status[]#
        </iterate>
    </select>

    <insert id="insert" parameterClass="projectDO">
        INSERT INTO ZL_Project (
            Name,
            Description,
            BeginTime,
            EndTime,
            Owner,
            Status,
            AddTime,
            UpdateTime
        ) VALUES (
            #name#,
            #description#,
            #beginTime#,
            #endTime#,
            #owner#,
            0,
            NOW(),
            NOW()
        )
        <selectKey resultClass="int">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <update id="updateStatusById">
        UPDATE ZL_Project
        SET Status = #status#
        WHERE ID = #id#
    </update>

    <update id="update">
        UPDATE ZL_Project
        SET Name = #name#,
            Description = #description#,
            BeginTime = #beginTime#,
            EndTime = #endTime#,
            Owner = #owner#
        WHERE ID = #id#
    </update>

</sqlMap>